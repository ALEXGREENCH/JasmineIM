<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alwaysDrawnWithCache="false"
    android:animationCache="false"
    android:drawingCacheQuality="low"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="false"
        android:orientation="vertical"
        android:padding="2sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alwaysDrawnWithCache="false"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/no_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alwaysDrawnWithCache="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alwaysDrawnWithCache="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="2sp">

                    <ImageView
                        android:id="@+id/groups_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2sp"
                        android:drawingCacheQuality="low" />

                    <FrameLayout
                        android:id="@+id/contact_item_inc_msg_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alwaysDrawnWithCache="true">

                        <ImageView
                            android:id="@+id/inc_mess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawingCacheQuality="low"
                            android:src="@drawable/icq_msg_in" />

                        <TextView
                            android:id="@+id/contact_item_messages_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:background="@drawable/msgs_number_back"
                            android:bufferType="normal"
                            android:drawingCacheQuality="high"
                            android:inputType="none"
                            android:shadowColor="#ff000000"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="2"
                            android:text="5"
                            android:textColor="#ffffffff"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawingCacheQuality="low" />

                    <ImageView
                        android:id="@+id/xstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2sp"
                        android:drawingCacheQuality="low" />

                    <TextView
                        android:id="@+id/nick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawingCacheQuality="high"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:maxLines="1"
                        android:shadowColor="#ff000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/vis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        android:drawingCacheQuality="low" />

                    <ImageView
                        android:id="@+id/invis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        android:drawingCacheQuality="low" />

                    <ImageView
                        android:id="@+id/ignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        android:drawingCacheQuality="low" />

                    <ImageView
                        android:id="@+id/auth_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        android:drawingCacheQuality="low" />

                    <ImageView
                        android:id="@+id/client_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        android:drawingCacheQuality="low" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alwaysDrawnWithCache="false"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp">

                    <TextView
                        android:id="@+id/contact_item_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawingCacheQuality="low"
                        android:maxLines="5"
                        android:padding="1sp"
                        android:shadowColor="#ff000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="123" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
