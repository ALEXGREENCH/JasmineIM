<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="3sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Jasmine IM это клиент для платформы Google Android. Создан для быстрого и удобного общения."
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/about2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Автор программы Кудряков Иван (Ivansuper)."
                android:textColor="#ffffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/about3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3sp"
                    android:text="Версия: "
                    android:textColor="#ffffeeee"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="version"
                    android:textColor="#ffffeeee"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/about4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11sp"
                android:layout_marginBottom="6sp"
                android:autoLink="web"
                android:text="Официальный сайт: jasmineicq.ru"
                android:textColorLink="#ffffffff" />

            <TextView
                android:id="@+id/about5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Сайт-партнер: SexyDroid.ru"
                android:textColorLink="#ffffffff" />

            <TextView
                android:id="@+id/about6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:autoLink="web"
                android:text="Форум: http://4pda.ru/forum/index.php?showtopic=246247"
                android:textColorLink="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/about7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:autoLink="web"
                android:text="Маркет: https://market.android.com/details?id=ru.ivansuper.jasmin"
                android:textColorLink="#ffffffff"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:src="@drawable/trade_mark" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
