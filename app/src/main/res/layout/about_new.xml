<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jasmine IM — это ICQ-клиент для Android. Проект модифицирован и дорабатывается ALEXGREENCH."
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/about2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Исходная версия: Кудряков Иван (Ivansuper)"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/about3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Версия: "
                    android:textColor="#FFEEEEEE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mod-version"
                    android:textColor="#FFEEEEEE"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/about4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autoLink="web"
                android:text="GitHub проекта: https://github.com/ALEXGREENCH/JasmineIM"
                android:textColorLink="#FFFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/about5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram (сервер на iServerD): https://t.me/kicq_official"
                android:autoLink="web"
                android:textColorLink="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/about6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВКонтакте: https://vk.com/oldicq"
                android:autoLink="web"
                android:textColorLink="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/about7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/trade_mark"
                android:scaleType="centerInside" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
