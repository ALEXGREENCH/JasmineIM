<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawingCacheQuality="low"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_item_sts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xmpp_online" />

        <ImageView
            android:id="@+id/user_item_affiliation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xmpp_conf_owner" />

        <TextView
            android:id="@+id/user_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:shadowColor="#ff000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="Information"
            android:textColor="#ffffffff" />

        <ImageView
            android:id="@+id/user_item_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_item_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:shadowColor="#ff000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="Status text"
        android:textColor="#ffffffff"
        android:textSize="12sp" />
</LinearLayout>
