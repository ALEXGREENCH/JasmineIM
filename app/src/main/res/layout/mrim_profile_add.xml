<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail:"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mrim_profile_add_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите пароль:"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mrim_profile_add_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <ru.ivansuper.jasmin.ui.MCheckBox
        android:id="@+id/mrim_profile_add_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Enabled" />

    <ru.ivansuper.jasmin.ui.MCheckBox
        android:id="@+id/mrim_profile_add_autoconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autoconnect" />

    <TextView
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВНИМАНИЕ! Данный протокол не работает когда телефон в нормальном спящем режиме. Для работы протокола сон будет блокирован и батарея будет разряжаться быстрее."
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:visibility="gone" />
</LinearLayout>
