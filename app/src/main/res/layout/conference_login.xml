<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/conf_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Сервер для конференций"
            android:maxLines="1"
            android:paddingRight="48sp"
            android:singleLine="true" />

        <Button
            android:id="@+id/conf_server_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="..."
            android:visibility="gone" />
    </LinearLayout>

    <Spinner
        android:id="@+id/conf_servers"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginLeft="280sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/conf_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Комната" />

        <Button
            android:id="@+id/conf_room_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="..." />
    </LinearLayout>

    <EditText
        android:id="@+id/conf_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ваш ник в конференции" />

    <EditText
        android:id="@+id/conf_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль для входа" />
</LinearLayout>
